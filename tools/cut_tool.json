{
    "name": "Cut Tool",
    "description": "Column/field extraction utility with support for custom delimiters, character/byte ranges, and field selection.",
    "category": "text",
    "tags": [
        "dev_tools",
        "filesystem_tools"
    ],
    "requires_sudo": false,
    "args": [
        {
            "name": "-d",
            "description": "Field delimiter character",
            "required": false
        },
        {
            "name": "-f",
            "description": "Select fields by number (e.g., 1,3-5)",
            "required": false
        },
        {
            "name": "-c",
            "description": "Select character positions",
            "required": false
        },
        {
            "name": "-b",
            "description": "Select byte positions",
            "required": false
        },
        {
            "name": "--complement",
            "description": "Complement the selection",
            "required": false
        }
    ]
}